<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Recipe Box-!</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Monoton&family=Poppins:ital,wght@0,300;0,500;1,900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/styles.css">
  </head>
  <body>
    <div class="container mt-5">
      <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
          <a class="navbar-brand" id="logo" href="../../"><h1>RB</h1></a>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item">
                @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link"})
              </li>
              <li class="nav-item">
                @Html.ActionLink("Recipes", "Index", "Recipes", null, new { @class = "nav-link"})
              </li>
              <li class="nav-item">
                @Html.ActionLink("Tags", "Index", "Tags", null, new { @class = "nav-link"})
              </li>
            </ul>
            <form id="searchBar" class="form-inline my-lg-0">
              @using(Html.BeginForm("Index", "Home", FormMethod.Get))
              {
                @Html.TextBox("search") <button class="btn btn-outline-success mx-3" type="submit">Search</button>
              }
            </form>
          </div>
        </div>
      </nav>
      <hr size="8" width="100%" color="gray" class="mr-5">  
      @RenderBody()
    </div>
  </body>
</html>
